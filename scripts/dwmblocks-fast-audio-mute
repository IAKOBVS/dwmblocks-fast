#!/bin/sh
pamixer -t
pkill -RTMIN+"$SIG_AUDIO" dwmblocks-fast &
# ffplay -nodisp -autoexit /usr/share/sounds/freedesktop/stereo/bell.oga &
gst-play-1.0 -q /usr/share/sounds/freedesktop/stereo/bell.oga &
if [ $(dwmblocks-fast-mic-ismuted) = 'true' ]; then
	notif='ðŸ”‡ Speaker is muted!'
else
	notif='ðŸ”‰ Speaker is on!'
fi
dunstctl close
notify-send "$notif"
