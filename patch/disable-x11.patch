Subject: [PATCH] disable: x11

---
 Makefile         | 4 ++--
 src/config.def.h | 4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/Makefile b/Makefile
index fc2fe2c..3d8f850 100644
--- a/Makefile
+++ b/Makefile
@@ -24,8 +24,8 @@
 # Compile only for this architecture (comment to disable)
 ARCHFLAGS += -march=native
 
-# X11 (comment to disable)
-X11FLAGS += -lX11
+# # X11 (comment to disable)
+# X11FLAGS += -lX11
 
 # Alsa (comment to disable)
 ALSAFLAGS += -lasound
diff --git a/src/config.def.h b/src/config.def.h
index 5cf2c4e..9891efc 100644
--- a/src/config.def.h
+++ b/src/config.def.h
@@ -19,8 +19,8 @@
 #ifndef CONFIG_H
 #	define CONFIG_H 1
 
-/* Use libx11. Comment to disable. */
-#	define USE_X11 1
+/* /1* Use libx11. Comment to disable. *1/ */
+/* #	define USE_X11 1 */
 
 /* Monitor Nvidia GPU. nvidia-settings as fallback. Comment to disable. */
 #	define USE_NVIDIA 1
