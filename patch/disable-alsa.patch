Subject: [PATCH] disable: alsa

---
 Makefile         | 4 ++--
 src/config.def.h | 4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/Makefile b/Makefile
index fc2fe2c..9926110 100644
--- a/Makefile
+++ b/Makefile
@@ -27,8 +27,8 @@ ARCHFLAGS += -march=native
 # X11 (comment to disable)
 X11FLAGS += -lX11
 
-# Alsa (comment to disable)
-ALSAFLAGS += -lasound
+# # Alsa (comment to disable)
+# ALSAFLAGS += -lasound
 
 # NVML (comment to disable)
 NVMLLIB = /opt/cuda/lib64
diff --git a/src/config.def.h b/src/config.def.h
index 5cf2c4e..eb2b79b 100644
--- a/src/config.def.h
+++ b/src/config.def.h
@@ -25,8 +25,8 @@
 /* Monitor Nvidia GPU. nvidia-settings as fallback. Comment to disable. */
 #	define USE_NVIDIA 1
 
-/* Monitor audio volume, requires ALSA. Comment to disable. */
-#	define USE_ALSA 1
+/* /1* Monitor audio volume, requires ALSA. Comment to disable. *1/ */
+/* #	define USE_ALSA 1 */
 
 /* Monitor Nvidia GPU, requires CUDA. Comment to disable. */
 #	define USE_NVML    1
